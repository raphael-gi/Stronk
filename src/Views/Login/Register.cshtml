@model User

@{
    Layout = "_Login";
    ViewData["Title"] = "Sign up";
}

@using(Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.TextBoxFor(user => user.Username, new { placeholder = "Username", required = "required" })
    @Html.PasswordFor(user => user.Password, new { placeholder = "Password", required = "required" })
    <input type="submit" value="Sign up"/>
}