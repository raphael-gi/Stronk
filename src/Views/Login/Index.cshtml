@using Microsoft.AspNetCore.Components.Web.Virtualization
@model User
@{
    Layout = "_Login";
    ViewData["Title"] = "Login";
}

@using(Html.BeginForm("Index", "Login", FormMethod.Post))
{
    @Html.TextBoxFor(user => user.Username, new { placeholder = "Username", required = "required" })
    @Html.TextBoxFor(user => user.Password, new { placeholder = "Password", required = "required" })
    <input type="submit" value="Login"/>
}